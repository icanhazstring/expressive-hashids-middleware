{
    "name": "icanhazstring/hashids-middleware",
    "description": "PSR-15/PSR-7 compliant middleware using ivanakimov/hashids.php",
    "type": "library",
    "repositories": [
        {
            "type": "path",
            "url": "/vagrant/middleware-exceptions"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "hashids/hashids": "^3.0",
        "psr/container": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/http-message": "^1.0",
        "icanhazstring/middleware-exceptions": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.1",
        "phpstan/phpstan": "^0.9.2",
        "squizlabs/php_codesniffer": "^3.2",
        "zendframework/zend-diactoros": "^1.7"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "icanhazstring",
            "email": "blubb0r05+github@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "icanhazstring\\Middleware\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "icanhaztests\\Middleware\\": "test"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@stan",
            "@test"
        ],

        "cs": "phpcs --standard=PSR2 src/ test/",
        "stan": "phpstan analyze -l max src/",
        "test": "phpunit --color=always test/"
    }
}
